{
    "compilerOptions": {
      "outDir": "dist",
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom", "ES2019"],
      "jsx": "react",
      "declaration": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
  }